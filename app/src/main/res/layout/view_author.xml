<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/generalMarginTop"
        android:text="@string/published_by"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/author_img"
        android:layout_width="@dimen/author_thumb_dimen"
        android:layout_height="@dimen/author_thumb_dimen"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/author_margin"
        app:civ_border_color="@color/gray"
        app:civ_border_width="1dp"
        tools:src="@drawable/bg_50"/>

    <TextView
        android:id="@+id/author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/author_img"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/generalMarginTop"
        android:layout_marginTop="@dimen/author_half_margin"
        android:paddingBottom="@dimen/generalMarginTop"
        android:textStyle="bold"
        tools:text="Lluna plena"/>

</RelativeLayout>