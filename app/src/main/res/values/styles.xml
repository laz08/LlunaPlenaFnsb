<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeWithToolbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EntryTitleStyle">
        <item name="android:textColor">@color/entryTitleTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
    </style>


    <style name="EntrySummaryStyle">
        <item name="android:textColor">@color/entryTitleTextColor</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="EntryDetailTitleStyle" parent="@style/EntryTitleStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/entryDetailTitleTextColor</item>
    </style>
</resources>
